<h2>Reviews</h2>
<table class='table'>
  <thead>
    <tr>
      <th scope='col'>ID</th>
      <th scope='col'>Movie Title</th>
      <th scope='col'>Title</th>
      <th scope='col'>Rating</th>
      <th scope='col'>Description</th>
      <th scope='col'>Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each reviews}}
      <tr id='{{this._id}}'>
        <th scope='row'>{{this._id}}</th>
        <td>{{this.title}}</td>
        <td>{{this.movieTitle}}</td>
        <td>{{this.rating}}</td>
        <td>{{this.description}}</td>
        <td><button
            class='btn btn-link delete-review'
            data-review-id='{{this._id}}'
          >Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>